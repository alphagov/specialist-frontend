<% content_for :page_title, [@document.title, @document.format_name].join(' ') %>
<header>
  <div class="inner-block">
    <span class="category"><%= @document.format_name %></span>
    <h1><%= @document.title %></h1>
  </div>
  <div class="metadata">
    <dl class="inner-block">
      <% @document.date_metadata.each do |label, date|%>
        <dt><%= label %>:</dt>
        <dd><%= nice_date_format(date) %></dd>
      <% end %>

      <%= render partial: 'metadata', locals: { document: @document } %>
    </dl>
  </div>
  <div class='summary'>
    <div class='inner-block'>
      <p>
        <%= @document.summary %>
      </p>
    </div>
  </div>
</header>

<nav class="sidebar">
  <ol class="inner-block js-stick-at-top-when-scrolling">
    <%= render 'nav_item', headings: @document.headers %>
  </ol>
</nav>

<div class="content">
  <div class="inner-block">
    <div class="govspeak">
      <%= @document.body.html_safe  %>
    </div>
  </div>
</div>

<footer class="js-footer">
  <div class='history'>
    <div class="inner-block">
      <dl>
        <% @document.date_metadata.each do |label, date|%>
          <dt><%= label %>:</dt>
          <dd><%= nice_date_format(date) %></dd>
        <% end %>
      </dl>
    </div>
  </div>
  <div class='links'>
    <dl class='inner-block'>
      <%= render partial: 'metadata', locals: { document: @document } %>
    </dl>
  </div>
</footer>

