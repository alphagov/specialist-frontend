<% content_for :page_title, [@document.title, "Competition & Markets Authority case"].join(' ') %>
<header>
  <div class="inner-block">
    <span class="category">Competition &amp; Markets Authority case</span>
    <h1><%= @document.title %></h1>
  </div>
  <div class="metadata">
    <dl class="inner-block">
      <dt>Opened date:</dt>
      <dd><%= nice_date_format @document.opened_date %></dd>

      <dt>Closed date:</dt>
      <dd><%= nice_date_format @document.closed_date %></dd>

      <dt>Page history:</dt>
      <dd>Updated <%= nice_date_format @document.updated_at %>
      </dd>

      <dt>Sector:</dt>
      <dd><%= @document.market_sector %></dd>

      <dt>Case type:</dt>
      <dd><%= @document.case_type %></dd>

      <dt>Case state:</dt>
      <dd><%= @document.case_state.capitalize %></dd>

      <dt>Outcome type:</dt>
      <dd><%= @document.outcome_type.capitalize %></dd>
    </dl>
  </div>
  <div class='summary'>
    <div class='inner-block'>
      <p>
        <%= @document.summary %>
      </p>
    </div>
  </div>
</header>

<nav class="sidebar">
  <ol class="inner-block js-stick-at-top-when-scrolling">
    <%= render 'nav_item', headings: @document.headers %>
  </ol>
</nav>

<div class="content">
  <div class="inner-block">
    <div class="govspeak">
      <%= @document.body.html_safe  %>
    </div>
  </div>
</div>

<footer class="js-footer">
  <div class='history'>
    <div class="inner-block">
      <dl>
        <dt>Opened date:</dt>
        <dd><%= nice_date_format @document.opened_date %></dd>
        <% if @document.closed_date.present? %>
          <dt>Closed date:</dt>
          <dd><%= nice_date_format @document.closed_date %></dd>
        <% end %>
        <dt>Last updated:</dt>
        <dd><%= nice_date_format @document.updated_at %></dd>
      </dl>
    </div>
  </div>
  <div class='links'>
    <dl class='inner-block'>
      <dt>Sector:</dt>
      <dd><%= @document.market_sector %></dd>

      <dt>Case type:</dt>
      <dd><%= @document.case_type %></dd>

      <dt>Case state:</dt>
      <dd><%= @document.case_state.capitalize %></dd>

      <dt>Outcome type:</dt>
      <dd><%= @document.outcome_type.capitalize %></dd>
    </dl>
  </div>
</footer>

