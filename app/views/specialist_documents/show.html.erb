<% content_for :page_title, [@document.title, @document.format_name].join(' ') %>
<header>
  <div class="inner-block">
    <span class="category"><%= link_to @document.format_name, @document.finder_path %></span>
    <h1><%= @document.title %></h1>
  </div>
  <div class="metadata">
    <dl class="inner-block">
      <% if @document.organisations.any? %>
        <dt>From:</dt>
        <dd><%= orgs_to_sentence(@document.organisations) %></dd>
      <% end %>

      <% @document.date_metadata.each do |label, date|%>
        <dt><%= label %>:</dt>
        <dd><%= nice_date_format(date) %></dd>
      <% end %>

      <% @document.metadata.each do |data| %>
        <dt><%= data.label %>:</dt>
        <dd><%= metadata_value_sentence(data) %></dd>
      <% end %>
    </dl>
  </div>
  <div class='summary'>
    <div class='inner-block'>
      <p>
        <%= @document.summary %>
      </p>
    </div>
  </div>
</header>

<nav class="sidebar">
  <ol class="inner-block js-stick-at-top-when-scrolling">
    <%= render 'nav_item', headings: @document.headers %>
  </ol>
</nav>

<div class="content">
  <div class="inner-block">
    <div class="govspeak">
      <%= @document.body.html_safe  %>
    </div>
  </div>
</div>

<footer class="js-footer">
  <div class='history'>
    <div class="inner-block">
      <dl>
        <% @document.date_metadata.each do |label, date|%>
          <dt><%= label %>:</dt>
          <dd><%= nice_date_format(date) %></dd>
        <% end %>
      </dl>
    </div>
  </div>
  <div class='links'>
    <dl class='inner-block'>
      <% @document.metadata.each do |data|%>
        <dt><%= data.label %>:</dt>
        <% data.values.each do |value| %>
          <dd><%= metadata_value(value) %></dd>
        <% end %>
      <% end %>
    </dl>
  </div>
</footer>

